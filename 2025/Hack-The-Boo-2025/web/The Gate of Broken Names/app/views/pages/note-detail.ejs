<main class="max-w-4xl mx-auto p-6 fade-in">
  <div class="card">
    <div id="note-container">
      <p class="text-gray-400 text-center py-8">Loading chronicle...</p>
    </div>

    <div class="mt-6 text-center">
      <a href="/public-notes" class="text-sm text-gray-500 hover:text-mystic-gold transition-colors">
        ‚Üê Back to all chronicles
      </a>
    </div>
  </div>
</main>

<script>
async function loadNote() {
  try {
    const response = await fetch('/api/notes/<%= noteId %>', {
      credentials: 'include'
    });
    
    if (!response.ok) {
      throw new Error('Failed to fetch note');
    }
    
    const note = await response.json();
    

    if (note && note.id) {
      document.getElementById('note-container').innerHTML = `
        <h2 class="text-3xl font-gothic text-mystic-gold mb-4 glow-text">${escapeHtml(note.title)}</h2>
        <div class="flex gap-4 mb-6 text-sm text-gray-400">
          <span>By ${escapeHtml(note.username)}</span>
          <span>‚Ä¢</span>
          <span>${new Date(note.created_at).toLocaleDateString()}</span>
          <span>‚Ä¢</span>
          <span class="px-2 py-1 rounded ${note.is_private ? 'bg-blood-red' : 'bg-green-600'} text-white">
            ${note.is_private ? 'üîí Private' : 'üåê Public'}
          </span>
        </div>
        <div class="text-gray-300 leading-relaxed whitespace-pre-wrap">${escapeHtml(note.content)}</div>
      `;
    } else {
      document.getElementById('note-container').innerHTML = '<p class="text-red-500 text-center py-8">Chronicle not found.</p>';
    }
  } catch (error) {
    console.error('Error loading note:', error);
    document.getElementById('note-container').innerHTML = '<p class="text-red-500 text-center py-8">Failed to load chronicle: ' + error.message + '</p>';
  }
}

function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;
}

loadNote();
</script>

