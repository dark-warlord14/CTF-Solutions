<main class="max-w-4xl mx-auto p-6 fade-in">
  <div class="card">
    <h2 class="text-3xl font-gothic text-mystic-gold mb-6 glow-text">üë§ User Profile</h2>

    <div id="profile-container">
      <p class="text-gray-400 text-center py-8">Loading profile...</p>
    </div>
  </div>
</main>

<script>
async function loadProfile() {
  try {
    const response = await fetch('/api/users/profile', {
      credentials: 'include'
    });
    
    if (!response.ok) {
      throw new Error('Failed to fetch profile');
    }
    
    const user = await response.json();
    

    if (user && user.id) {
      document.getElementById('profile-container').innerHTML = `
        <div class="flex gap-6 items-start">
          <div class="text-6xl">üßô‚Äç‚ôÇÔ∏è</div>
          <div class="flex-1">
            <h3 class="text-2xl font-gothic text-mystic-gold mb-2">${escapeHtml(user.username)}</h3>
            <p class="text-gray-400 mb-4">Email: ${escapeHtml(user.email)}</p>
            <p class="text-gray-400 mb-4">Role: ${escapeHtml(user.role)}</p>
            <p class="text-gray-400">Member since: ${new Date(user.created_at).toLocaleDateString()}</p>
          </div>
        </div>
      `;
    } else {
      document.getElementById('profile-container').innerHTML = '<p class="text-red-500 text-center py-8">Profile not found.</p>';
    }
  } catch (error) {
    console.error('Error loading profile:', error);
    document.getElementById('profile-container').innerHTML = '<p class="text-red-500 text-center py-8">Failed to load profile: ' + error.message + '</p>';
  }
}

function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;
}

loadProfile();
</script>

