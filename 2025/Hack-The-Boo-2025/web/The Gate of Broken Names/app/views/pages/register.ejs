<div class="min-h-screen flex items-center justify-center p-4 relative z-10">
  <div class="w-full max-w-2xl">
    <div class="card bg-gradient-to-br from-halloween-gray to-halloween-black border-2 border-mystic-gold mystic-border fade-in">
      <div class="text-center mb-8">
        <div class="text-5xl mb-4 animate-swing">ğŸ“</div>
        <h2 class="text-3xl font-gothic text-mystic-gold glow-text mb-2">
          Create Account
        </h2>
        <p class="text-gray-400">Join the Halloween Notes community</p>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error">
          <span>âš ï¸</span>
          <span><%= error %></span>
        </div>
      <% } %>

      <form action="/api/auth/register" method="POST" class="space-y-4">
        <div class="form-group">
          <label class="form-label">
            <span class="text-2xl mr-2">ğŸ‘¤</span>
            <span>Username</span>
          </label>
          <input
            type="text"
            name="username"
            class="form-input"
            placeholder="Choose your username..."
            required
            autocomplete="username"
          >
          <p class="text-xs text-gray-500 mt-1 ml-1">Letters, numbers, and underscores only</p>
        </div>

        <div class="form-group">
          <label class="form-label">
            <span class="text-2xl mr-2">ğŸ“§</span>
            <span>Email Address</span>
          </label>
          <input
            type="email"
            name="email"
            class="form-input"
            placeholder="your.email@example.com"
            required
            autocomplete="email"
          >
          <p class="text-xs text-gray-500 mt-1 ml-1">We'll never share your email</p>
        </div>

        <div class="form-group">
          <label class="form-label">
            <span class="text-2xl mr-2">ğŸ”’</span>
            <span>Password</span>
          </label>
          <input
            type="password"
            name="password"
            class="form-input"
            placeholder="Create a strong password..."
            minlength="6"
            required
            autocomplete="new-password"
          >
          <p class="text-xs text-gray-500 mt-1 ml-1">Minimum 6 characters</p>
        </div>

        <div class="form-group">
          <label class="form-label">
            <span class="text-2xl mr-2">ğŸ”’</span>
            <span>Confirm Password</span>
          </label>
          <input
            type="password"
            name="confirm_password"
            class="form-input"
            placeholder="Re-enter your password..."
            minlength="6"
            required
            autocomplete="new-password"
          >
          <p class="text-xs text-gray-500 mt-1 ml-1">Must match your password</p>
        </div>

        <button type="submit" class="btn btn-primary w-full group">
          <span class="text-xl mr-2">âœ¨</span>
          <span>Create Account</span>
          <span class="ml-2 group-hover:scale-110 transition-transform">â†’</span>
        </button>
      </form>

      <div class="mt-6 pt-6 border-t border-fog-gray">
        <p class="text-center text-gray-400 mb-4">Already have an account?</p>
        <a href="/login" class="btn btn-ghost w-full group">
          <span class="text-xl mr-2">ğŸšª</span>
          <span>Sign In</span>
          <span class="ml-2 group-hover:translate-x-1 transition-transform">â†’</span>
        </a>
      </div>

      <div class="mt-6 text-center">
        <a href="/" class="text-sm text-gray-500 hover:text-mystic-gold transition-colors">
          â† Back to home
        </a>
      </div>
    </div>
  </div>
</div>

